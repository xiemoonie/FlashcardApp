<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentTranslation"
    android:background="@color/white"
    tools:context=".TranslationFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cardView"
        android:nestedScrollingEnabled="true"
        android:fontFamily="@font/amatis_bold"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="5"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_translation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:listitem="@layout/card"
        ></androidx.recyclerview.widget.RecyclerView>
    <Button
        android:id="@+id/button_translation"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="40dp"
        android:textColor="@color/orangeLight"
        android:backgroundTint="@color/blue"
        android:text="+"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>